<%- include('../includes/head.ejs') %>

  <%- include('../includes/navbar.ejs') %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css"
      integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <main id="container">
      <% orders.reverse().forEach(order=>{ %>
        <%let totalPriceOrder=0; %>
          <article class="order">
            <div class="order-header">
              <h5><span class="color">Order Id :</span>
                <%= order._id %>
              </h5>
            </div>
            <br>
            <table style="width: 100%;" class="table">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Product</th>
                  <th scope="col">Price/unit</th>
                  <th scope="col">Quantity</th>
                  <th scope="col">img</th>
                </tr>
              </thead>
              <tbody>
                <%let i=0%>
                  <%order.items.forEach(item=>{ %>
                    <tr class="tr">
                      <%i++;%>
                        <th scope="row">
                          <%= i%>
                        </th>
                        <td>
                          <%= item.name%>
                        </td>
                        <td>
                          <%= item.price%>
                            <% totalPriceOrder=totalPriceOrder + +item.price*item.quantity; %>
                        </td>
                        <td>
                          <%= item.quantity%>
                        </td>
                        <td class="item-order"><img src="<%= item.imageUrl%>" alt=""></td>
                    </tr>
                    <% }) %>


              </tbody>
            </table>
            <hr>
            <div class="order-total" style="display: flex; justify-content:space-between">
              <h1 style="font-size:22px ;">Total</h1>
              <h1 style="font-size:22px ; color: #333;">
                $ <%= totalPriceOrder%>
              </h1>
            </div>
            <hr>
          </article>
          <% }) %>

    </main>


    <%- include('../includes/end.ejs') %>