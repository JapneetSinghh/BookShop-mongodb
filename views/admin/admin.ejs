<%- include('../includes/head.ejs') %>
  <%- include('../includes/navbar.ejs') %>
    <main>
      <br>
    <%if (products.length > 0) {%>
      <h1 class="center">Our Products</h1>
      <section id="container">
        <div class="products">
          <% products.forEach(p=>{ %>
            <article class="product">
              <div class="product-image">
                <img src="<%=p.productImage%>" alt="">
              </div>
              <div class="product-details">
                <p class="product-name">
                  <%= p.productName%>
                </p>
                <p class="product-price">
                  <%= p.productPrice%>$
                </p>
                <div class="center">
                  <form action="/delete-product/<%= p.productId%>" method="POST">
                    <button type="submit" class="btn">Delete</button> &nbsp;
                    <a class="btn" href="edit-product/<%= p.productId %>?editMode=true">Edit</a>
                  </form>
                </div>
              </div>
              
            </article>
            <% })%>
        </div>
      </section>
      <% }else {%>
        <h1 class="center">No Products Found</h1>
      <% }%>
    </main>
    <%- include('../includes/end.ejs') %>