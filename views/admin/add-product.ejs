<%- include('../includes/head.ejs') %>
  <%- include('../includes/navbar.ejs') %>
    <main>
      <div id="container">
        <%if(editMode){%>
          <h1 style="text-align: center;margin-top: 20px;">Edit Product</h1>
          <%} else{%>
            <h1 style="text-align: center;margin-top: 20px;">Add Products</h1>
            <%}%>

              <form action="  <%if(editMode){%>/edit-product<%}else{%>/add-product<%}%>" method="POST" id="form">
                <label>Title</label>
                <input type="text" name="productName" value="<%if(editMode){%> <%=products.productName%><%}%>">
                <label>Price</label>
                <input type="number" step="0.01" value="<% if (editMode){ %><%= products.productPrice%><%}%>"
                  name="productPrice">
                <label>Image Url</label>
                <input type="text" name="productLink" value="<%if(editMode){%> <%=products.productImage%><%}%>">
                <label>Description</label>
                <textarea name="productDescription" id="" cols="30" rows="10"><%if(editMode){%><%=products.productDescription%><%}%></textarea>
                <%if(editMode){%>
                  <input type="hidden" name="productId" value="<%=products.productId%>">
                  <%}%>
                    <br>
                    <button class="btn" type="submit">
                      <%if(editMode){%>
                        Update Product
                        <%}else{%>
                          Add Product
                          <%}%>
                    </button>
              </form>
      </div>


    </main>
    <%- include('../includes/end.ejs') %>